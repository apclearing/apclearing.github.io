section.row-fluid.clearfix.hidden-xs.hidden-sm.social-buttons
  div.row
    .col-xs-12
      p.center Share us!<br>
        a.btn.btn-primary(target="_blank" rel="nofollow" href="https://www.facebook.com/sharer.php?u=#{encodeURIComponent(root_url[environment])}&t=#{encodeURIComponent(title)}") <i class="icon-facebook"></i>&nbsp;Facebook
        a.btn.btn-info(target="_blank" rel="nofollow" href="https://twitter.com/intent/tweet?text=#{encodeURIComponent(title)}%20#{encodeURIComponent(description)}%20#{encodeURIComponent(root_url[environment])}") <i class="icon-twitter"></i>&nbsp;Twitter
  div.row
    .col-xs-12
      p.center Follow us!<br>
        a.btn.btn-primary(target="_blank" rel="nofollow" href="https://www.facebook.com/#{slug_title}") <i class="icon-facebook"></i>&nbsp;Facebook
        a.btn.btn-info(target="_blank" rel="nofollow" href="https://twitter.com/crp_underground") <i class="icon-twitter"></i>&nbsp;Twitter
        a.btn.btn-default(target="_blank" rel="nofollow" href="#{github_url}") <i class="icon-github"></i>&nbsp;Github
