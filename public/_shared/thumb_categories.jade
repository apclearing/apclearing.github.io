- var sorted_categories = categories.sort();
- var total_mappings = sorted_categories.reduce(function(total, category) {
-     return total + public[category]._data.index.mappings.length;
- }, 0);
section.row-fluid.clearfix
  p.center
    <strong>#{total_mappings}</strong> Metadata Guideline Documents Provided By <strong>#{categories.length}</strong> Institutions
  p.center
    <strong>placeholder</strong>
!= partial("filters")
section.row-fluid.clearfix
  .row-fluid
    each category in sorted_categories
      - var category_data = public[category]._data.index
      - var tags = category_data.tags.join(',')
      .col-xs-12.col-sm-4.col-md-3(data-tags="#{tags}")
        .thumbnail
          a(href="#{root_url[environment]}#{category_data.name}" title="#{category_data.about}")
            img.img-responsive.img-rounded(src="#{root_url[environment]}assets/images/#{category_data.image}")
          div.caption
            p.center
             a.btn.btn-block.btn-success(href="#{root_url[environment]}#{category_data.name}" title="#{category_data.about}")<i></i>&nbsp;#{category_data.subtitle}
section.row-fluid.clearfix
          p.center
            <a href="#{form_url}" class="btn btn-lg btn-success" target="_blank" title="Submit an Application Profile to the Clearinghouse"><i class="icon-plus"></i>&nbsp;Submit Your Institution's Documents</a>&nbsp;&nbsp;
